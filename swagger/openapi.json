    }
  },
  "servers": [
    {
      "url": "https://boxyhq.com/",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Api-Key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/api/v1/saml/config": {
      "post": {
        "summary": "Create SAML configuration",
        "operationId": "createConfig",
        "tags": [
          "SAML Config"
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": [
                  "encodedRawMetadata",
                  "defaultRedirectUrl",
                  "redirectUrl"
                ],
                "properties": {
                  "encodedRawMetadata": {
                    "type": "string",
                    "description": "Base64 encoding of the XML metadata"
                  },
                  "defaultRedirectUrl": {
                    "type": "string",
                    "description": "The redirect URL to use in the IdP login flow"
                  },
                  "redirectUrl": {
                    "type": "string",
                    "description": "JSON encoded array containing a list of allowed redirect URLs"
                  },
                  "tenant": {
                    "type": "string",
                    "description": "Tenant"
                  },
                  "product": {
                    "type": "string",
                    "description": "Product"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Access denied"
          }
        }
      },
      "get": {
        "summary": "Get SAML configuration",
        "operationId": "getConfig",
        "tags": [
          "SAML Config"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Access denied"
          }
        }
      },
      "delete": {
        "summary": "Delete SAML configuration",
        "operationId": "deleteConfig",
        "tags": [
          "SAML Config"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Access denied"
          }
        }
      }
    },
    "/oauth": {
      "post": {
        "summary": "Code exchange",
        "operationId": "oauthCodeExchange",
        "tags": [
          "OAuth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Access denied"
          }
        }
      },
      "get": {
        "summary": "Get profile",
        "operationId": "oauthGetProfile",
        "tags": [
          "OAuth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Access denied"
          }
        }
      }
    }
  }
}
