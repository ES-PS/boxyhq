{
  "openapi": "3.0.0",
  "info": {
    "title": "SAML Jackson API",
    "description": "This is the API documentation SAML Jackson service.",
    "termsOfService": "https://boxyhq.com/terms.html",
    "version": "1.0.0",
    "contact": {
      "name": "Boxy HQ",
      "url": "https://boxyhq.com/",
